<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#a08989</item>
        <item name="colorPrimary">#a08989</item><!---->
        <item name="colorPrimaryDark">#000000</item><!---->
     <!--   <item name="android:navigationBarColor"
            tools:targetApi="lollipop">#ffcdd5</item>-->
    </style>


    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashview</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/goblinGreen</item>
    </style>


    <style name="listViewHeaderItem">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/lvHeadingTextSize</item>
        <item name="android:paddingLeft">@dimen/lvHeadingPaddingLeft</item>
    </style>

    <style name="listViewItem">
        <item name="android:layout_height">@dimen/lvItemHeight</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="listViewPrimaryDetail">
        <item name="android:paddingTop">@dimen/lvPrimaryPaddingTop</item>
        <item name="android:paddingBottom">@dimen/lvPrimaryPaddingBottom</item>
        <item name="android:paddingLeft">@dimen/lvPrimaryPaddingLeft</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/lvPrimaryTextSize</item>
    </style>

    <style name="listViewSecondaryDetail">
        <item name="android:paddingTop">@dimen/lvSecondaryPaddingTop</item>
        <item name="android:paddingBottom">@dimen/lvSecondaryPaddingBottom</item>
        <item name="android:paddingLeft">@dimen/lvSecondaryPaddingLeft</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/lvSecondaryTextSize</item>
    </style>

    <style name="listViewVerticalDivider">
        <item name="android:layout_marginTop">@dimen/lvDividerMargin</item>
        <item name="android:layout_marginBottom">@dimen/lvDividerMargin</item>
        <item name="android:layout_width">@dimen/lvDividerWidth</item>
        <item name="android:background">@color/lvDividerColor</item>
    </style>

    <style name="listViewSectionDividerVerticalDivider">
        <item name="android:layout_width">@dimen/lvDividerWidth</item>
        <item name="android:background">@color/goblinGreen</item>
        <item name="android:layout_marginTop">@dimen/lvSectionDividerMargin</item>
        <item name="android:layout_marginBottom">@dimen/lvSectionDividerMargin</item>
    </style>

    <style name="listViewItemButtonStyle">
        <item name="android:layout_width">@dimen/lvItemHeight</item>
        <item name="android:layout_height">@dimen/lvItemHeight</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="listViewHeaderItemButtonStyle">
        <item name="android:layout_width">@dimen/lvItemHeight</item>
        <item name="android:layout_height">@dimen/lvItemHeight</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>