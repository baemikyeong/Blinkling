<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.hyemin.blinkling.Setting.SetFontFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/radioscrollrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="@dimen/settingsListTopPadding">

            <RadioButton
                android:id="@+id/radio_small1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settingsListHeight"
                android:checked="true"
                android:text="lv.1"
                android:textSize="@dimen/settingsTextSize"
                android:paddingLeft="@dimen/settingsInternalPadding"
                android:buttonTint="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/radio_small2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settingsListHeight"
                android:text="lv.2"
                android:textSize="@dimen/settingsTextSize"
                android:paddingLeft="@dimen/settingsInternalPadding"
                android:buttonTint="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radio_small3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settingsListHeight"
                android:text="lv.3"
                android:textSize="@dimen/settingsTextSize"
                android:paddingLeft="@dimen/settingsInternalPadding"
                android:buttonTint="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radio_small4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settingsListHeight"
                android:text="lv.4"
                android:textSize="@dimen/settingsTextSize"
                android:paddingLeft="@dimen/settingsInternalPadding"
                android:buttonTint="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radio_small5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settingsListHeight"
                android:text="1페이지"
                android:textSize="@dimen/settingsTextSize"
                android:paddingLeft="@dimen/settingsInternalPadding"
                android:buttonTint="@color/colorPrimary"/>


        </RadioGroup>
    </RelativeLayout>

</FrameLayout>
